{# Colors #}

{% set colors = {
    'white': '#FFF',
    'default': '#E0E0E0',
    'success': '#4F805D',
    'warning': '#EF5350',
    'info': '#9E9E9E',
    'link': '#03A9F4',
    'hover': '#616161'
    }
%}

{# Mixins #}

{% set mixins = {
    'font_family': 'Helvetica, Arial, sans-serif',
    'font_size': '14px',
} %}

{# Media #}

@media (max-width: 1200px) {

    .app > .main > .sidebar {
        width: 5em !important;
        min-width: 5em !important;
        max-width: 5em !important;
    }

    .app > .main > .sidebar > .menu .text {
        display: none !important;
    }

    .app > .main > .sidebar > .menu .count {
        right: inherit !important;
        text-align: left !important;
        font-size: 0.8em !important;
        left: 3.5em !important;
        top: 0.5em !important;
    }
}

{# Dump #}

.dump {
    color: {{ colors.default }};
}

.dump table, .dump tr, .dump th, .dump td {
    background: {{ colors.hover }};
}

.dump table tbody th,
.dump table tbody td {
    border: 1px solid #424242;
}

.dump .array .key {
    white-space: nowrap;
}

{# Row #}

.row {
    margin-bottom: 1em;
}

{# Button #}

.button {
    background: {{ colors.default }};
    border: none;
    line-height: 2em;
    padding: .4em .8em;
    font-size: 0.9em;
    outline: none;
    cursor: pointer;
}

.button:hover {
    background: #BDBDBD;
}

{# Metric #}

.metric {
    display: inline-block;
    background: {{ colors.white }};
    border: 1px solid {{ colors.default }};
    box-shadow: 0 0 1px rgba(128, 128, 128, .2);
    margin-right: 1em;
    min-width: 5em;
    margin-bottom: 1em;
}

.metric .value {
    padding: .5em;
    text-align: center;
    font-size: 1.5em;
}

.metric .title {
    padding: .5em;
    background: {{ colors.default }};
    font-weight: bold;
    font-size: .8em;
    text-align: center;
}

{# Block #}

.block {
    border: 1px solid {{ colors.default }};
    padding: 1em;
    margin-bottom: 1em;
    background: {{ colors.default }};
}

.block.warning {
    background: {{ colors.warning }};
    color: {{ colors.default }};
}

{# Panel #}

.panel {
    background: {{ colors.white }};
    border: 1px solid {{ colors.default }};
    min-height: 25em;
    display: flex;
    flex-direction: column;
    margin-bottom: 1em;
}

.panel .title {
    padding: .5em;
    background: {{ colors.default }};
    font-weight: bold;
    font-size: .8em;
}

.panel .content {
    flex-grow: 1;
    flex-shrink: 1;
}

{# Chart #}

.chart {
    width: 100%;
    height: 25em;
}

{# Tabs #}

.tabs {
    display: flex;
    margin-bottom: 1em;
}

.tabs .tab {
    background: {{ colors.white }};
    padding: 0.6em 1em;
    font-size: 1em;
    outline: none;
    cursor: pointer;
    border: 1px solid {{ colors.default }};
    margin-right: -1px;
    text-decoration: none;
}

.tabs .tab:hover {
    background: {{ colors.default }};
}

.tabs .tab.active {
    color: {{ colors.default }};
    background: {{ colors.hover }};
}

{# Table #}

table, tr, th, td {
    background: {{ colors.white }};
    border-collapse: collapse;
    line-height: 1.5;
    vertical-align: top;
}

table {
    background: {{ colors.white }};
    border: 1px solid {{ colors.default }};
    box-shadow: 0 0 1px rgba(128, 128, 128, .2);;
    margin: 1em 0;
    width: 100%;
}

table th, table td {
    padding: 8px 10px;
}

table th {
    font-weight: bold;
    text-align: left;
}

table thead th {
    background-color: {{ colors.default }};
}

table thead th.key {
    width: 19%;
}

table tbody th,
table tbody td {
    font-family: monospace;
    font-size: 13px;
    font-size-adjust: 0.5;
    border-style: solid;
    border-width: 1px 0;
    border-color: {{ colors.default }};
}

table tbody td {
    -ms-word-break: break-all;
    word-break: break-all;
    -webkit-hyphens: auto;
    -moz-hyphens: auto;
    hyphens: auto;
}

table tbody div {
    margin: .25em 0;
}

table tbody ul {
    margin: 0;
    padding: 0 0 0 1em;
}

table .info {
    font-size: .8em;
    color: {{ colors.info }};
}

table a, table .link {
    font-size: .9em;
    color: {{ colors.link }};
    text-decoration: none;
    cursor: pointer;
}

{# Loader #}

body > .loader {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, .5);
    z-index: 1000;
}

body > .loader > .text {
    background: #424242;
    color: {{ colors.default }};
    padding: 1em;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, .8);
}

{# Styles #}

html, body {
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
}

body {
    background-color: #FAFAFA;
    color: #263238;
    font-family: {{ mixins.font_family|raw }};
    font-size: {{ mixins.font_size|raw }};
    line-height: 1.4;
}

.app {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

.app > .header {
    height: 4em;
    line-height: 4em;
    background: #212121;
    color: #ECEFF1;
    display: flex;
    flex-direction: row;
    padding: 0 .5em;
    border-bottom: .2em solid #000000;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, .8);
    z-index: 100;
}

.app > .warn {
    padding: 1em;
    background-color: {{ colors.warning }};
    color: #ECEFF1;
    z-index: 1;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, .8);
}

.app > .warn i {
    padding-right: .5em;
}

.app > .header > .logo {
    font-size: 1.3em;
    color: {{ colors.default }};
    padding: 0 0.4em;
}

.app > .header > .logo .text {
    font-size: .8em;
    color: {{ colors.info }};
}

.app > .header > .info {
    flex-grow: 1;
    flex-shrink: 1;
    text-align: right;
    font-size: .9em;
    color: {{ colors.default }};
    padding-right: 0.4em;
}

.app > .main {
    flex-grow: 1;
    flex-shrink: 1;
    display: flex;
    flex-direction: row;
}

.app > .main > .sidebar {
    width: 16em;
    min-width: 10em;
    max-width: 16em;
    background: #424242;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, .8);
}

.app > .main > .sidebar > .menu {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.app > .main > .sidebar > .menu .item {
    padding: 0.8em 1em;
    color: {{ colors.default }};
    display: flex;
    flex-direction: row;
    cursor: pointer;
    position: relative;
    text-decoration: none;
}

.app > .main > .sidebar > .menu .item:hover {
    background: {{ colors.hover }};
}

.app > .main > .sidebar > .menu .item.selected {
    background: {{ colors.hover }};
}

.app > .main > .sidebar > .menu .ico {
    font-size: 1.5em;
    padding-right: .5em;
    line-height: 1.3em;
}

.app > .main > .sidebar > .menu .count {
    position: absolute;
    color: {{ colors.default }};
    right: 0.2em;;
    padding: 0.3em;
    min-width: 1.4em;
    border-radius: 0.2em;
    font-size: 1em;
    line-height: 1.5em;
    text-align: right;
}

.app > .main > .sidebar > .menu .text {
    line-height: 2em;
}

.app > .main > .container {
    flex-grow: 1;
    flex-shrink: 1;
    padding: 1em;
    max-width: 1000px;
}

.app > .main > .container > .header {
    padding-bottom: .5em;
    line-height: 2em;
    font-size: 1.5em;
    flex-grow: 1;
    flex-shrink: 1;
}